{
  "name": "plan-assistant",
  "version": "1.1.0-alpha.1",
  "description": "Review implementation plans in the browser with live reload",
  "homepage": "https://github.com/sanderdatema/plan_assistant#readme",
  "bugs": {
    "url": "https://github.com/sanderdatema/plan_assistant/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sanderdatema/plan_assistant.git"
  },
  "license": "MIT",
  "author": "Sander Datema",
  "type": "module",
  "bin": {
    "plan-assistant": "bin/cli.js"
  },
  "files": [
    "bin/",
    "dist/",
    "build/"
  ],
  "scripts": {
    "dev": "vite dev --port 5199",
    "build": "npm run build:cli && npm run build:server",
    "build:cli": "tsc -p tsconfig.cli.json",
    "build:server": "vite build && find build -name '*.gz' -o -name '*.br' | xargs rm -f",
    "preview": "vite preview --port 5199",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "marked": "^15.0.7"
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "^5.5.3",
    "@sveltejs/kit": "^2.53.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tailwindcss/vite": "^4.1.4",
    "@types/node": "^25.3.0",
    "highlight.js": "^11.11.0",
    "mermaid": "^11.6.0",
    "svelte": "^5.20.0",
    "svelte-check": "^4.1.0",
    "tailwindcss": "^4.1.4",
    "typescript": "^5.7.0",
    "vite": "^6.2.0"
  }
}
